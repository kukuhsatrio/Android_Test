<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <gradient android:angle="135" android:endColor="#00d1c6" android:startColor="#00d1c6" />
            <corners android:radius="25dp" />
            <stroke android:width="2dp" android:color="#00afa6" />
        </shape>

    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <gradient android:angle="225" android:endColor="#fff" android:startColor="#fff" />
            <corners android:radius="25dp" />
            <stroke android:width="2dp" android:color="#00afa6" />
        </shape>

    </item>
</selector>